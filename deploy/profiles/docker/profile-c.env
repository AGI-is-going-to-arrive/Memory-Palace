# Phase 4 Profile C (Docker): local/private API preferred.
DATABASE_URL=sqlite+aiosqlite:////app/data/memory_palace.db
SEARCH_DEFAULT_MODE=hybrid
RETRIEVAL_EMBEDDING_BACKEND=router
ROUTER_API_BASE=http://host.docker.internal:PORT/v1
ROUTER_API_KEY=replace-with-your-key
ROUTER_EMBEDDING_MODEL=Qwen/Qwen3-Embedding-8B
RETRIEVAL_EMBEDDING_MODEL=Qwen/Qwen3-Embedding-8B
RETRIEVAL_EMBEDDING_API_BASE=http://host.docker.internal:PORT/v1
RETRIEVAL_EMBEDDING_API_KEY=replace-with-your-key
RETRIEVAL_EMBEDDING_DIM=4096
RETRIEVAL_RERANKER_ENABLED=true
RETRIEVAL_RERANKER_API_BASE=http://host.docker.internal:PORT/v1
RETRIEVAL_RERANKER_API_KEY=replace-with-your-key
RETRIEVAL_RERANKER_MODEL=Qwen/Qwen3-Reranker-8B
# Tunable: increase for stronger reranker influence.
RETRIEVAL_RERANKER_WEIGHT=0.30
RUNTIME_INDEX_WORKER_ENABLED=true
RUNTIME_INDEX_DEFER_ON_WRITE=true
RUNTIME_INDEX_QUEUE_MAXSIZE=512
RUNTIME_INDEX_RECENT_JOBS=100
RUNTIME_SESSION_FIRST_SEARCH=true
